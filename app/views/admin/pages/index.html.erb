<% content_for :head do %>
<script type="text/javascript">
$(function(){
	$('#edit_div').dialog({ autoOpen: false, width: 600});
});
</script>
<style type="text/css" >
	.deleted {font-style:italic;color:#666;text-decoration:line-through;}
</style>
<% end %>


<%#= render :partial => 'admin/shared/product_sub_menu' %>

<div class="toolbar">
  <ul class="actions">
    <li id="new_page_link">
      <a href="pages/new" class="button" data-remote="true" id="admin_new_page">
      	<span><img alt="Add" src="/images/admin/icons/add.png"> New Page</span></a>
    </li>
  </ul>
  <br class="clear">
</div>

<h1><%= "#{t("actions.listing")} #{t("pages")}" %></h1>

<div id="edit_div"></div>

<table class="index" id='pages'>
  <tr>
      <th>permalink</th>
      <th>title</th>
      <th>updated</th>
	    <th>Action</th>
  </tr>
<% @collection.each do |page| %>
	<%= render page %>
<% end %>
</table>
<%= will_paginate(:previous_label => "&#171; #{t('previous')}", :next_label => "#{t('next')} &#187;") %>

<% content_for :sidebar do %>
    <%= form_for [:admin, @search] do |f| %>
      <div class="box">
        <h3><%= t(:search) %></h3>

        <%- locals = {:f => f} %>
  

          <p class="form-buttons">
            <%= button t("search") %>
          </p>
      </div>
  <% end %>
<% end %>

