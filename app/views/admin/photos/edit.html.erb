<%= render :partial => 'admin/shared/product_sub_menu' %>

<%= render "shared/error_messages", :target => @photo %>
<%= form_for(:photo, :url => admin_destination_photo_url(@destination), :html => { :method => :put, :multipart => true }) do |f| %>
  <table class="basic-table">
    <tr>
      <td><%= t("thumbnail") %>:</td>
      <td><%= link_to(image_tag(@photo.attachment.url(:mini)), @photo.attachment.url(:destination)) %></td>
    </tr>
    <%= render :partial => "form", :locals => { :f => f } %>
  </table>
  <p class="form-buttons">
    <%= button t("update") %>
    <%= t('or') %> <%= link_to t("cancel"), admin_product_images_url(@destination), :id => "cancel_link" %>
  </p>
<% end %>
